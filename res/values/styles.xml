    <style name="normalButton" parent="@android:style/Widget.Button">
        <item name="android:textSize">25px</item>
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="normalButtonOnWhiteBG" parent="@android:style/Widget.Button">
